@import mixins

html, body, div, section, aside, header, footer ,nav, p, h1, h2, h3, h4, h5, h6,
ul, li, ol, form, button, input, textarea, small, strong, a, img, select, option
	padding 0
	margin 0
	box-sizing border-box

button, input
	border none
	outline none

ul li
		list-style-type none

a
	text-decoration none
	color PURPLE1
	&:visited
		color PURPLE2
	&:active
		color PURPLE2
	&:visited
		color inherit

div, section, aside, footer, header, nav
	display flex

select
  outline none
  border none
  appearance none

option
  outline none
  border none

html
  font-size 62.5%

body
	display flex
	background SMOKE
	font-size 1.6rem
  font-weight 400
  font-family OPEN
  letter-spacing 0.5px
  line-height 1.45
  color darkslategray

#root
	width 100%
	height 100%

h1, h2, h3, h4, h5, h6
	font-weight 300
	letter-spacing 1px

h1
  font-size 3.157em

h2
  font-size 2.369em

h3
  font-size 1.777em

h4
  font-size 1.333em

small
  font-size 0.75em

strong
	font-weight 700
