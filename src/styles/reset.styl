@import globals
@import grid
@import mixins

html,
body,
div,
section,
aside,
header,
footer,
nav,
p,
h1,
h2,
h3,
h4,
h5,
h6,
ul,
li,
ol,
form,
button,
input,
textarea,
small,
strong,
a,
img,
select,
option {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}


html {
  font-size: 62.5%;
}

body {
  display: flex;
  background: #f5f5f5;
  font-size: 1.6rem;
  font-weight: 400;
  font-family: 'Open Sans', sans-serif;
  letter-spacing: 0.5px;
  line-height: 1.45;
  color: #2f4f4f;
}

.view {
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
}

.view:not(.Frame) {
  margin-top: 60px;
}

button,
input {
  border: none;
  outline: none;
  color: white;
}

ul li {
  list-style-type: none;
}

a {
  text-decoration: none;
  color: #9370db;

  &:hover {
    cursor: pointer;
  }
}

:visited {
  color: #483d8b;
}

:active {
  color: #483d8b;
}

:visited {
  color: inherit;
}

div,
section,
aside,
footer,
header,
nav {
  display: flex;
}

select {
  outline: none;
  border: none;
  appearance: none;
}

option {
  outline: none;
  border: none;
}

#root {
  width: 100%;
  height: 100%;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: 300;
  letter-spacing: 1px;
}

h1 {
  font-size: 3.157em;
}

h2 {
  font-size: 2.369em;
}

h3 {
  font-size: 1.777em;
}

h4 {
  font-size: 1.333em;
}

small {
  font-size: 0.75em;
}

strong {
  font-weight: 700;
}

.clickable {
  cursor: pointer;
}

button
  font-weight 500
  letter-spacing 2px
  padding 10px 15px
  font-size 1.6rem
  background GREEN1
  text-transform uppercase
  color WHITE
  box-shadow 0 2px 0 GREEN2
  border-radius 4px
  font-weight 700

  &:disabled
    opacity 0.75

  &:hover
    cursor: pointer;

  a
    color white

    &:visited
      color white
